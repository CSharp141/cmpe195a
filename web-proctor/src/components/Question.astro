---
interface Props {
	q: { question: string; options: any[]; }
}

const { q } = Astro.props;
---

<li class="question-card">
    <h2>{q.question}</h2>
    <ul>
        {q.options.map((j, index) =>
            <li>
                <label>
                <input type="radio" name={`${index}`} value={j} />
                {j}
                </label>
            </li>
        )}
    </ul>
</li>

<style>
	.question-card {
		list-style: none;
		display: flex;
        flex-direction: column;
		padding: 5px;
		background-color: #23262d;
		background-image: none;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        max-width: none;
        margin: 10px 20px 20px 20px;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        padding: 10px;
	}
    label {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
    }
    input {
        width: 40px;
        margin-top: 7px;
    }
	ul {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

</style>
